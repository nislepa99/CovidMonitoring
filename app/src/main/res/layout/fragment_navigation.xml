<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <Button
            android:id="@+id/btnGlobalData"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:background="@drawable/global_data_back"
            android:text="Global data"
            android:textStyle="bold" />

        <Button
            android:id="@+id/btnRussia"
            android:layout_width="90dp"
            android:layout_height="50dp"
            android:layout_margin="5dp"
            android:background="@drawable/rus_back"
            android:text="Russia"
            android:textAllCaps="false"
            android:textStyle="bold" />

        <Button
            android:id="@+id/btnSpain"
            android:layout_width="90dp"
            android:layout_height="50dp"
            android:layout_margin="5dp"
            android:background="@drawable/spain_back"
            android:text="Spain"
            android:textAllCaps="false"
            android:textStyle="bold" />

        <Button
            android:id="@+id/btnUK"
            android:layout_width="90dp"
            android:layout_height="50dp"
            android:layout_margin="5dp"
            android:text="UK"
            android:background="@drawable/uk_back"
            android:textAllCaps="false"
            android:textStyle="bold" />

    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>